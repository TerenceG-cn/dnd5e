<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.ArtObjectsDao">
    <select id="getArtByValue" parameterType="java.lang.Integer" resultType="entity.treasures.ArtObjects">
        SELECT * FROM artobjects WHERE value=#{val};
    </select>
    <select id="getArtByName"  parameterType="java.lang.String" resultType="entity.treasures.ArtObjects">
        SELECT * FROM artobjects WHERE en_name=#{name} or cn_name=#{name};
    </select>
    <insert id="insertArt"  parameterType="entity.treasures.ArtObjects" >
        INSERT INTO artobjects VALUES (#{id},#{en_name},#{cn_name},#{value})
    </insert>
    <update id="updateArt" parameterType="entity.treasures.ArtObjects" >
        UPDATE artobjects
        <set>
            <if test="en_name !=null">en_name=#{en_name}</if>
            <if test="cn_name !=null">cn_name=#{cn_name}</if>
            <if test="value !=null">value=#{value}</if>
        </set>
        WHERE id=#{id}
    </update>
    <delete id="deleteArt">
        DELETE FROM artobjects WHERE id=#{_parameter}
    </delete>
</mapper>